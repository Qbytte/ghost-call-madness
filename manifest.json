{
  "manifest_version": 2,
  "name": "GhostCall",
  "description": "JS script made to auto fill a tedious form",
  "version": "1.0",
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["https://forms.office.com/*"],
      "js": ["./index.js"],
      "css": ["./styles.css"]
    }
  ],
  "web_accessible_resources": ["./img/*.png"],
  "icons": {
    "128": "./img/icons128.png",
    "48": "./img/icons48.png",
    "16": "./img/icons16.png"
  },
  "browser_action": {
    "default_icon": "./img/icons16.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
